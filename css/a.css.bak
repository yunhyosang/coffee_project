#mHead{display:none;border:1px solid #b4b4b4;}

@media all and (max-width:480px){
	#removeHead{display:none;}
	#mHead{display:table-Row;}
	.tableDisplay ul li:last-child{display:none;}

}





/* common에 추가될 css */
#content .pcContents{width:100%;height:90px;clear:both;padding-top:20px;}
#content .pcContents div > a {display:inline-block;vertical-align:middle;width:260px; text-overflow:ellipsis;white-space:nowrap;overflow:hidden;padding:0 0 0 5px;}
#content .pcContents div > span{position:absolute; top:15px;right:50px;}
#content .pcContents .news{position:relative;float:left;width:50%;}
#content .pcContents .press{position:relative;float:right;width:50%;}

#content .mobileContents{width:100%;padding-top:20px;}
#content .mobileContents .newPress{position:relative;width:95%;margin:0 auto;}
#content .mobileContents .newPress > *{font-family:helveticaneueltpromd;}
#content .mobileContents .newPress .firstP >*{font-size:17px;padding:0 0 10px 0;}
#content .mobileContents .newPress .firstP > span.firstS{color:#c4004a;}
#content .mobileContents .newPress .firstP > span.secondS{color:#333333;}
#content .mobileContents .newPress .firstP > a{color:#757474;position:absolute;top:0;right:0;}
#content .mobileContents .newPress .secondP > span,
#content .mobileContents .newPress .secondP > a{font-size:14px;}
