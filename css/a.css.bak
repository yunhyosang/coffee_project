  .btn_white{display:inline-block;width:88px;height:23px;border:1px solid #cccccc;line-height:23px;text-align:center;color:#757575;background-color:#fff; }
  
  .btnTitle{font-size:15px;}





  /* 테이블 guide */
 
.tableDisplay {display:table;width:100%;}
.tableRow{display:table-row;}
.tableDisplay li{display:table-cell; font-size:12px; border-bottom:1px solid #dddddd;padding:15px 0 15px 0;text-align:center;} /*font size는 임의 조절 */
.tableDisplay ul:first-child{background-color:#f7f7f7;}
.tableDisplay ul:first-child li{border-top:1px solid #b4b4b4; font-family:'glypha-bold';text-align:center;}

 table{border-spacing:0; border-collapse:collapse; width:100%;}
.tableWrap{width:100%}
.tableWrap .table_1 tr th, 
.tableWrap .table_1 tr td{border-bottom:1px solid #dddddd;height:48px;font-size:12px;}

.tableWrap .table_1 tr:first-child th, 
.tableWrap .table_1 tr:first-child td{border-top:1px solid #b4b4b4;}
.txtCenter_Vnone{text-align:center; border-bottom:none !important;}
.txtCenter{text-align:center !important;}
.txtLeft{text-align:left !important;}


.tableWrap .table_2 thead tr th{background-color:#f7f7f7;}
.tableWrap .table_2 tr th, 
.tableWrap .table_2 tr td{border-bottom:1px solid #dddddd;height:38px;text-align:center;padding:12px 0 12px 0;font-size:12px;font-weight:bold;color:#4c4c4c;}
.tableWrap .table_2 tr:first-child th, 
.tableWrap .table_2 tr:first-child td{border-top:1px solid #b4b4b4;}
.pagination a{font-weight:normal !important; color:#757575;padding:0 5px 0 5px;}
.pagination a.current{color:#c40147;font-weight:bold !important;}


  /* font size guide*/
  .f_12 {font-size:12px;}
  .f_20 {font-size:20px;}
  .f_23 {font-size:23px;}
  .f_25 {font-size:25px;}

  /* font-color*/
.fontColor_1{color:#c40048;}

